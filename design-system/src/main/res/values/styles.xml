<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Text.Button" parent="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Regular.12" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Text.Regular.14" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Text.Regular.16" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text.RegularItalic" parent="Text">
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <style name="Text.RegularItalic.12">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Text.RegularItalic.14">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Text.RegularItalic.16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.Medium.12" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Text.Medium.14" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Text.Medium.16" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="Text.MediumItalic" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium_italic</item>
    </style>

    <style name="Text.MediumItalic.12" parent="Text.MediumItalic">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Text.MediumItalic.14" parent="Text.MediumItalic">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Text.MediumItalic.16" parent="Text.MediumItalic">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="BaseButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Text.Button</item>
        <item name="cornerRadius">@dimen/button_corner</item>
    </style>

    <style name="BaseButton.Primary" parent="BaseButton">
        <item name="backgroundTint">@color/green_300</item>
    </style>

    <style name="BaseButton.Secondary" parent="BaseButton">
        <item name="strokeColor">@color/white_000</item>
        <item name="strokeWidth">@dimen/secondary_button_stroke</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

</resources>